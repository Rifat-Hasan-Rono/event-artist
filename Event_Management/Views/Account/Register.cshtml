@model Event_Management.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<h3 class="animated wow zoomIn" data-wow-delay=".5s"><span>Register</span></h3><br /><br />

<div class="card">
<div class="main-w3layouts-form">
    <div class="fields-w3-agileits">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2>Fill out the form below to register</h2>

        @Html.ValidationSummary("", new { @class = "text-danger" })
        @*<div class="form-group">
        @Html.LabelFor(m => m.RoleName, new { @class = "col-md-2 control-label" })*@
        @*<div class="fields-w3-agileits">
            <span class="fa fa-user" aria-hidden="true"></span>
            @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
        </div>*@
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })

        </div>
        @*<div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
        <div class="fields-w3-agileits">
            <span class="fa fa-user" aria-hidden="true"></span>
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
        </div><div class="clear"> </div>
        <div class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)

        </div>
        <div class="fields-w3-agileits">
            <span class="fa fa-key" aria-hidden="true"></span>
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
        </div>
        <div class="text-danger">
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="fields-w3-agileits">
            <span class="fa fa-key" aria-hidden="true"></span>
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" })
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">

            <input type="submit" class="btn btn-default" value="Register" />

        </div>
}
    </div>
</div></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
@section style
{
    <link href="~/LogIn/css/font-awesome.css" rel="stylesheet" />
    <link href="~/LogIn/css/ls.css" rel="stylesheet" />
}