@model IEnumerable<Event_Management.Models.RoleViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td id="Name">
            @Html.DisplayFor(modelItem => item.Name)
            <td>
                <button class="btn btn-info">@Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button> 
                <button class="btn btn-success">@Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
                <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
            </td>
        </tr>
    }

</table>

<h2>List Of User</h2>
<table class="table table-bordered table-hover table-striped" id="t1">
    <thead>
    <tr>
        <th>Email</th>
        <th>Email Confirmed</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.users)
        {
        <tr>
            <td>@user.Email</td>
            <td>@user.EmailConfirmed</td>
            @foreach (var use in ViewBag.roleName) { <td>@use.Name</td>}
            <td><input type="button" title="Delete" value="D" onclick="location.href='@Url.Action("Delete", "Account", new {  id = user.Id })'" /></td>
            <td>@Html.ActionLink("name", "DeleteConfirmed", "Account", new { id = user.Id})</td>
        </tr>
        }
        
    </tbody>
</table>
